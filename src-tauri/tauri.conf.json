{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KRO-IDE",
  "version": "0.1.0",
  "identifier": "dev.kro.ide",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../.next"
  },
  "app": {
    "windows": [
      {
        "title": "KRO IDE",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Development",
    "shortDescription": "AI-Powered Code Editor",
    "longDescription": "KRO IDE - A lightweight, AI-powered code editor with local LLM support",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0"]
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
