{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kyro IDE",
  "version": "1.1.0",
  "identifier": "com.kyroide.app",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../.next"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kyro IDE",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "focus": true,
        "tabbingIdentifier": "kyro-ide",
        "theme": "dark"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data: blob:; connect-src 'self' https: ws: http://localhost:* http://127.0.0.1:*; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "MIT License",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Kyro IDE is a free, open-source, privacy-first AI-powered development environment that delivers premium IDE features without the premium price tag.",
    "shortDescription": "AI-Powered Privacy-First IDE",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/header.bmp",
        "sidebarImage": "icons/sidebar.bmp",
        "license": "../LICENSE",
        "installMode": "currentUser",
        "languages": ["English", "SimpChinese", "TradChinese", "Japanese", "Korean", "German", "French", "Spanish"],
        "displayLanguageSelector": true
      },
      "wix": {
        "language": ["en-US", "zh-CN", "zh-TW", "ja-JP", "ko-KR", "de-DE", "fr-FR", "es-ES"]
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13",
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowPosition": {
          "x": 200,
          "y": 120
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libssl3", "libayatana-appindicator3-1"],
        "desktopTemplate": "kyro-ide.desktop",
        "files": {
          "/usr/share/icons/hicolor/32x32/apps/kyro-ide.png": "icons/32x32.png",
          "/usr/share/icons/hicolor/128x128/apps/kyro-ide.png": "icons/128x128.png"
        }
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "openssl-libs", "libayatana-appindicator-gtk3"]
      }
    },
    "externalBin": [],
    "iOS": null,
    "android": null
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "bun",
          "cmd": "bun",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "cargo",
          "cmd": "cargo",
          "args": true
        },
        {
          "name": "rustc",
          "cmd": "rustc",
          "args": true
        },
        {
          "name": "go",
          "cmd": "go",
          "args": true
        },
        {
          "name": "docker",
          "cmd": "docker",
          "args": true
        }
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.kyroide.dev/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "",
      "dialog": {
        "title": "Kyro IDE Update",
        "body": "A new version of Kyro IDE is available. Would you like to download and install it now?",
        "updateButton": "Update Now",
        "cancelButton": "Later"
      },
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
